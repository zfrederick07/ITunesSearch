<!--Layouts out the table to display the clicks of the users-->
<!--Allows user to sort by Time, Session Id, and track name to better organize information-->

@model List<Click>
    @{
    ViewData["Title"] = "Clicks";
    }
    <div class="row">
        <div class="col-6">
            <h2>Click History</h2>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered table-condensed table-striped table-hover sortable" data-toggle="table" data-pagination="true" data-search="true">
                    <thead>
                        <tr class="secondary">
                            <th class="col-sm-3" data-sortable="true" data-field="WhenUTC" data-defaultsign="AZ">When (UTC)</th>
                            <th class="col-sm-2" data-sortable="true" data-field="SessionId" data-defaultsign="AZ">Session ID</th>
                            <th class="col-sm-5" data-sortable="true" data-field="TrackName" data-defaultsign="AZ">Track Name</th>
                            <th class="col-sm-2" data-sortable="false" data-field="TrackViewUrl" data-defaultsign="AZ">View URL</th>
                        </tr>
                    </thead>
                    @if (Model == null || Model.Count() == 0)
                    {
                    <tr>
                        <td colspan="4">No Records found.</td>
                    </tr>
                    }
                    else
                    {
                    foreach (var item in Model.OrderByDescending(x => x.TimeOfClick))
                    {
                    <tr>
                        <td>
                            @item.TimeOfClick
                        </td>
                        <td>
                            @item.SessionId
                        </td>
                        <td>
                            @item.TrackName
                        </td>
                        <td>
                            @item.TrackViewUrl
                        </td>
                    </tr>
                    }
                    }
                </table>
            </div>
        </div>
        <hr />
    </div>